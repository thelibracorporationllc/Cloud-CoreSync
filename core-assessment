    <button onclick="calculateAndSendResults()">Submit and Send Results</button>
    
    <div id="results"></div>
    
    <script>
        (function() {
            emailjs.init("YOUR_PUBLIC_KEY"); // Replace with your EmailJS Public Key
        })();
        
        function showSection(sectionNum) {
            document.querySelectorAll('section').forEach(s => s.style.display = 'none');
            document.getElementById(`section${sectionNum}`).style.display = 'block';
        }
        
        function calculateAndSendResults() {
            const form = document.getElementById('testForm');
            const formData = new FormData(form);
            let results = {};
            
            // Section 1: MBTI
            let e = 0, i = 0, s = 0, n = 0, t = 0, f = 0, j = 0, p = 0;
            for (let q = 1; q <= 16; q++) {
                const val = formData.get(`q${q}`) || '';
                if ([1,5,9,13].includes(q)) val === 'A' ? e++ : i++;
                if ([2,6,10,14].includes(q)) val === 'A' ? s++ : n++;
                if ([3,7,11,15].includes(q)) val === 'A' ? t++ : f++;
                if ([4,8,12,16].includes(q)) val === 'A' ? j++ : p++;
            }
            results.mbti = (e > i ? 'E' : 'I') + (s > n ? 'S' : 'N') + (t > f ? 'T' : 'F') + (j > p ? 'J' : 'P');
            
            // Section 2: Enneagram
            let types = new Array(10).fill(0); // Index 1-9
            const trios = [
                {A:1, B:2, C:3}, {A:4, B:5, C:6}, {A:7, B:6, C:7}, {A:1, B:2, C:3}, {A:4, B:5, C:6}, {A:8, B:6, C:7},
                {A:1, B:2, C:3}, {A:4, B:5, C:9}, {A:8, B:6, C:7}, {A:1, B:2, C:3}, {A:4, B:5, C:9}, {A:8, B:6, C:7}
            ];
            for (let q = 1; q <= 12; q++) {
                const val = formData.get(`q2_${q}`) || '';
                if (val && trios[q-1][val]) types[trios[q-1][val]]++;
            }
            const core = types.indexOf(Math.max(...types));
            results.enneagram = {core: core || 'Undetermined', counts: types.slice(1)};
            
            // Section 3: Instincts
            let spTotal = 0, soTotal = 0, sxTotal = 0;
            for (let q = 1; q <= 8; q++) {
                spTotal += parseInt(formData.get(`q3_sp${q}`) || 3);
                soTotal += parseInt(formData.get(`q3_so${q}`) || 3);
                sxTotal += parseInt(formData.get(`q3_sx${q}`) || 3);
            }
            const spAvg = spTotal / 8, soAvg = soTotal / 8, sxAvg = sxTotal / 8;
            let stackArr = [{name:'SP', avg:spAvg}, {name:'SO', avg:soAvg}, {name:'SX', avg:sxAvg}].sort((a,b) => b.avg - a.avg);
            results.instincts = {sp: spAvg.toFixed(2), so: soAvg.toFixed(2), sx: sxAvg.toFixed(2), stack: stackArr.map(s => s.name.toLowerCase()).join('/')};
            
            // Section 4: Love Languages
            let a=0, b=0, c=0, d=0, e=0;
            for (let q = 1; q <= 15; q++) {
                const val = formData.get(`q4_${q}`) || '';
                if (val === 'A') a++;
                if (val === 'B') b++;
                if (val === 'C') c++;
                if (val === 'D') d++;
                if (val === 'E') e++;
            }
            const languages = {words: a, time: b, gifts: c, service: d, touch: e};
            const primary = Object.keys(languages).reduce((maxKey, key) => languages[key] > languages[maxKey] ? key : maxKey, Object.keys(languages)[0]);
            results.loveLanguages = {tallies: languages, primary};
            
            // Section 5: Values and Motivations
            let selectedValues = [];
            document.querySelectorAll('input[name="values"]:checked').forEach(cb => selectedValues.push(cb.value));
            let ranks = [];
            for (let r = 1; r <= 5; r++) ranks.push(formData.get(`rank${r}`) || '');
            results.values = {selected: selectedValues, ranked: ranks};
            let motTotal = 0;
            for (let q = 1; q <= 10; q++) motTotal += parseInt(formData.get(`q5_${q}`) || 3);
            results.motivationsAvg = (motTotal / 10).toFixed(2);
            
            // Section 6: Spirituality etc.
            let spiritTotal = 0, moralTotal = 0, creatTotal = 0;
            const spiritQs = [1,5,8,12], moralQs = [2,4,6,9,11], creatQs = [3,7,10];
            spiritQs.forEach(q => spiritTotal += parseInt(formData.get(`q6_${q}`) || 3));
            moralQs.forEach(q => moralTotal += parseInt(formData.get(`q6_${q}`) || 3));
            creatQs.forEach(q => creatTotal += parseInt(formData.get(`q6_${q}`) || 3));
            results.spirituality = {
                spiritAvg: (spiritTotal / spiritQs.length).toFixed(2),
                moralAvg: (moralTotal / moralQs.length).toFixed(2),
                creatAvg: (creatTotal / creatQs.length).toFixed(2)
            };
            
            const resultsJson = JSON.stringify(results, null, 2);
            const submissionTime = new Date().toISOString();
            
            // Send via EmailJS
            emailjs.send("YOUR_SERVICE_ID", "YOUR_TEMPLATE_ID", {
                results_json: resultsJson,
                submission_time: submissionTime
            }).then(
                function(response) {
                    document.getElementById('results').innerText = 'Results sent successfully! Copy below:\n' + resultsJson;
                },
                function(error) {
                    document.getElementById('results').innerText = 'Error sending email: ' + JSON.stringify(error) + '\nResults: ' + resultsJson;
                }
            );
        }
    </script>
</body>
</html>